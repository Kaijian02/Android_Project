<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ACDEF4"
    android:orientation="vertical">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingLeft="50dp"
        android:text="Hello xxx"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:paddingLeft="35dp"
        android:text="Welcome to Inti Court"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/greeting"
        app:srcCompat="@drawable/user_icon" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/imageView4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#5f5f5f" />

    <FrameLayout
        android:id="@+id/branchButtonFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greeting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/branchButton"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:backgroundTint="#5e8cc8"
            android:layout_marginTop="10dp"
            android:onClick="checkRequestStatus"
            android:text="" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/question" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/branchButtonFrame"
        android:layout_centerHorizontal="true"
        android:text="Your request join status"
        android:textSize="15dp" />

    <FrameLayout
        android:id="@+id/bookButtonFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/bookButton"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:backgroundTint="#5e8cc8"
            android:onClick="bookingPage"
            android:text="Book" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/_159277_badminton_badminton_court_isometric_racket_shuttlecock_icon" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookButtonFrame"
        android:layout_alignStart="@+id/bookButtonFrame"
        android:layout_marginLeft="25dp"
        android:text="Book a court"
        android:textSize="15dp" />

    <FrameLayout
        android:id="@+id/joinButtonFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="110dp"
        android:layout_toRightOf="@+id/bookButtonFrame"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:backgroundTint="#5e8cc8"
            android:onClick="courtSearchPage"
            android:text="Join" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/join" />
    </FrameLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/joinButtonFrame"
        android:layout_alignStart="@+id/joinButtonFrame"
        android:layout_marginLeft="25dp"
        android:text="Join a court"
        android:textSize="15dp" />

