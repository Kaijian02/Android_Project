<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/rounded_field">


    <TextView
        android:id="@+id/id"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:padding="3dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/branch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id"
        android:maxLines="1"
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/courtLinear"
        android:layout_below="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/courtText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Court : "
            android:textSize="17dp"
            android:textStyle="" />

        <TextView
            android:id="@+id/court"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/branch"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="3dp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateLinear"
        android:layout_below="@+id/courtLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Date : "
            android:textSize="17dp"
            android:textStyle="" />

        <TextView
            android:id="@+id/date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courtLinear"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="3dp"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/timeLinear"
        android:layout_below="@+id/dateLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timeText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Time : "
            android:textSize="17dp"
            android:textStyle="" />

        <TextView
            android:id="@+id/time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateLinear"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="3dp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ownerLinear"
        android:layout_below="@+id/timeLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ownerText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Owner : "
            android:textSize="17dp"
            android:textStyle="" />

        <TextView
            android:id="@+id/host"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeLinear"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="3dp"
            android:visibility="visible" />

    </LinearLayout>






</RelativeLayout>
